<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LanguageActivity">

    <Button
        android:id="@+id/btn_uzbek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/uzbek_language"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_china"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/chinese_language"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_korea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/korean_language"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/btn_japan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/japanese_language"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textStyle="normal" />

</LinearLayout>